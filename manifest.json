{
  "manifest_version": 3,
  "name": "Emoji Typer",
  "version": "2.1.3",
  "description": "Type emojis using :name syntax with autocomplete and emoji picker",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "options_page": "src/options/options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/emojiData.js", "src/content/emojiMap.js", "src/content/content.js"],
      "css": ["src/content/content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon128.png",
    "48": "icons/icon128.png",
    "128": "icons/icon128.png"
  }
}
